<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lista_Pendientes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/frgListadoPedido"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:name="com.example.user.obligatorioandroid.Listado_Pedido_Fragment"
            tools:layout="@layout/fragment_lista_pedido"/>

        <fragment
            android:id="@+id/frgDetallePedido"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:name="com.example.user.obligatorioandroid.Detalle_Pedido_Fragment"
            tools:layout="@layout/fragment_detalle_pedido" />

    </LinearLayout>

</RelativeLayout>
